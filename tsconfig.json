{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmit": true,
        "pretty": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "ESNext"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
