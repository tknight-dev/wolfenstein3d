{
    "author": "tknight-dev",
    "description": "A multithreaded pseudo 3d game engine",
    "name": "blockenstein",
    "license": "MIT",
    "scripts": {
        "archiver": "rimraf dist && nodemon --quiet --watch ./assets/**/* -x \"node archiver.cjs\"",
        "dev": "rimraf dist && concurrently --kill-others \"yarn archiver\" \"node esbuild.mjs dev\" -n A,C --pad-prefix",
        "lint": "prettier esbuild.mjs src/. --write",
        "prod": "rimraf dist && node esbuild.mjs"
    },
    "type": "module",
    "version": "0.0.0",
    "dependencies": {
        "@tknight-dev/gaming-canvas": "1.7.0",
        "jszip": "^3.10.1",
        "node-stream-zip": "^1.15.0"
    },
    "devDependencies": {
        "@jgoz/esbuild-plugin-typecheck": "^4.0.0",
        "archiver": "^7.0.1",
        "concurrently": "^9.2.1",
        "esbuild": "^0.25.5",
        "esbuild-sass-plugin": "^3.0.0",
        "open": "^10.0.0",
        "prettier": "^3.0.0",
        "rimraf": "^6.0.0",
        "typescript": "^5.0.0"
    }
}
