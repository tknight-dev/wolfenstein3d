{
    "author": "tknight-dev",
    "description": "A multithreaded raycast game in a 2d canvas context",
    "name": "wolfenstein3d",
    "scripts": {
        "assets:build": "node assets.cjs",
        "assets:watch": "nodemon --ext \"*\" --exec \"node assets.cjs\" --watch assets",
        "dev": "rimraf dist && concurrently --kill-others \"yarn assets:watch\" \"node esbuild.mjs dev\" -n A,C --pad-prefix",
        "lint": "prettier assets.cjs esbuild.mjs src/. --write",
        "prod": "rimraf dist && yarn assets:build && node esbuild.mjs"
    },
    "type": "module",
    "version": "0.3.0",
    "dependencies": {
        "@tknight-dev/gaming-canvas": "1.16.0",
        "jszip": "^3.10.1",
        "node-stream-zip": "^1.15.0"
    },
    "devDependencies": {
        "@jgoz/esbuild-plugin-typecheck": "^4.0.0",
        "archiver": "^7.0.1",
        "concurrently": "^9.2.1",
        "esbuild": "^0.25.5",
        "esbuild-sass-plugin": "^3.0.0",
        "nodemon": "^3.1.10",
        "open": "^10.0.0",
        "prettier": "^3.0.0",
        "rimraf": "^6.0.0",
        "typescript": "^5.0.0"
    }
}
